{
  "name": "tsdevtools",
  "version": "0.2.2",
  "description": "tsdevtools",
  "license": "MIT",
  "repository": "",
  "author": {
    "name": "Tim Bavaro",
    "email": "tbavaro@gmail.com",
    "url": "http://timba.me"
  },
  "keywords": [
    ""
  ],
  "files": [
    "lib"
  ],
  "bin": {
    "tsdevtools": "lib/main.js"
  },
  "scripts": {
    "clean": "rimraf lib && rimraf coverage",
    "format": "prettier --write \"{src}/**/*.ts\" es5",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "tsdevtools": "node ./lib/main.js",
    "prepublishOnly": "npm run build",
    "prebuild": "npm run clean && echo skipping npm run format && npm run lint && echo Using TypeScript && tsc --version",
    "build": "tsc --pretty",
    "test": "jest",
    "coverage": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:test": "jest --watch",
    "push": "npm run build && node ./lib/main.js deploy"
  },
  "dependencies": {
    "npm": "^5.8.0",
    "rimraf": "^2.0.0",
    "semver": "^5.5.0",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "@types/jest": "^22.0.1",
    "@types/node": "^8.0.0",
    "@types/rimraf": "^2.0.2",
    "@types/semver": "^5.5.0",
    "@types/yargs": "^11.0.0",
    "coveralls": "^2.0.0",
    "jest": "^22.0.4",
    "ts-jest": "^22.0.1",
    "ts-node": "^3.2.0",
    "tslint": "^5.0.0",
    "tslint-config-prettier": "^1.1.0",
    "typescript": "^2.8.0"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "jest": {
    "transform": {
      ".(ts)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testEnvironment": "node"
  }
}
